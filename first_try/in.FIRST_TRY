#============Initialization==============
units 			real
atom_style 		atomic

#==============Box=======================
boundary 		p p p
region 			mybox block 0 100 0 100 0 100
create_box  	1 mybox

#============Atoms=======================
create_atoms 	1 random 10 12345 mybox
# labelmap 		atom 1 H
mass 			* 1.0

#=========Velocity initialization===================
velocity 		all create 0.001 12345 rot yes dist gaussian

#======Pair style for atom interactions=============
pair_style 		lj/cut 2.5
pair_coeff 		* * 1 1

#====Fixes for time integration and constraints=====
fix 			1 all nve
fix 			2 all temp/berendsen 300.0 300.0 100.0

#===========Timestep================================
timestep 		1.0

#========System temperature printing info===========
thermo_style 	custom step temp etotal pe 
thermo 			1000

#===============Define dump command=================
dump 			2 all cfg 5000 ./dump/dump.tensile_*.cfg mass type xs ys zs vx vy vz id

#================Run simulation=====================
run 			50000
