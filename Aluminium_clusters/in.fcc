units metal
dimension 3
boundary p p p
atom_style charge

# Define the lattice structure
lattice fcc 4.05

# Define the region where atoms will be created
region my_region block 0 10 0 10 0 10

# Create the simulation box
create_box 1 my_region

# Populate the simulation box with atoms according to the defined lattice
create_atoms 1 region my_region
mass * 26.98

velocity   all create  0.001 1563967 rot yes dist gaussian

# Define interatomic potential
pair_style eam/alloy
pair_coeff * * ./Al-LEA.eam.alloy Al

dump 			1 all cfg 1000 ./dump/fcc/dump.tensile_*.cfg mass type xs ys zs vx vy vz q id
dump			2 all atom 1000 ./tmp/fcc/tmp.dump
dump_modify     1 element Al

# Additional commands to run the simulation
thermo 100
run 10000

write_data ./endconf/bcc/endconf*1.data