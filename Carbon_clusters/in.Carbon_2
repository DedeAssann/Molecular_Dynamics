#============Initialization=================
units 			metal
atom_style 		atomic
boundary 		p p p


#=========Simulation box definition=========
region 			bigbox block 0 10 0 10 0 10
create_box 		1 bigbox

#==================Atoms====================
create_atoms 	1 random 2 12345 bigbox
labelmap 		atom 1 C
mass 			* 12.0107

#==========Velocity initialization==========
velocity 		all create 0.001 12345 rot yes dist gaussian

#======Pair style for atom interactions=============
pair_style 		airebo 2.5
pair_coeff 		* * CH.airebo C

#==============Neighbor selection===================
neighbor 		0.3 bin
neigh_modify 	every 2 delay 10 check yes

#====Fixes for time integration and constraints=====
fix 			1 all nve
fix 			2 all temp/berendsen 300.0 3000.0 0.1

#=====================Timestep======================
timestep 		0.0001

#========System temperature printing info===========
thermo_style 	custom step temp etotal pe 
thermo 			500

#===============Define dump command=================
dump 			1 all cfg 100 ./dump/dump.tensile_*.cfg mass type xs ys zs vx vy vz id

#================Run simulation=====================
run 			50000
